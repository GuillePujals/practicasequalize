<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/css/style.css' />

</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
    </figure>
    <form action="/movies/update/<%=movie.id%>:id?_method=PUT" method="POST">
        <label for="title">Nombre</label>
        <input type="text" name="title" value="<%= movie.title %>">
        <label for="rating">Rating</label>
        <input type="number" name="rating" value="<%= movie.rating %>">
        <label for="awards">Premios</label>
        <input type="number" name="awards" value="<%= movie.awards %>">
        <label for="release_date">Fecha de creación</label>
        <input type="date" name="release_date" value="<%= movie.release_date %>">
        <label for="length">Duración</label>
        <input type="text" name="length" value="<%= movie.length %>">
        <label for="">Genero</label>
        <select name="genre_id">
            <% generos.forEach(genre=> {%>
                <% if (genre.id==movie.genre_id){ %>
                    <option value="<%= genre.id %>" selected>
                        <%= genre.name %>
                    </option>
                <% } else { %>
                        <option value="<%= genre.id %>">
                            <%= genre.name %>
                        </option>
                <% } %>

            <% }) %>
        </select>
        <button type="submit">Enviar</button>
    </form>

</body>

</html>